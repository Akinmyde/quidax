{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "jest",
      "styled-components-react-native"
    ],
    "allowJs": true
  },
  "include": [
    "components",
    "screens",
    "custom.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
